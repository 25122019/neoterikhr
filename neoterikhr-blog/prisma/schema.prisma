generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String
  category    String
  rating      Float
  image       String?
  author      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}