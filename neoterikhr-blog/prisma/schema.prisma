generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id             String   @id @default(cuid())
  slug           String   @unique

  // i18n JSON
  title          Json
  description    Json?
  content        Json

  category       String
  rating         Float
  image          String?

  // affiliate / project fields
  type           String?        // "project" | "product"
  affiliateUrl   String?
  commission     String?
  cookieTime     String?
  paymentMethods Json?
  pros           Json?
  cons           Json?

  author         String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
